    <div class="container">
        <a href="@Url.Action("Index", "Home")" class="navbar-brand">
            <i class="far fa-play-circle"></i> RentAMovie
        </a>
        @*@Html.ActionLink("RentAMovie", "Index", "Home", new { area=""}, new { @class="navbar-brand"})*@
