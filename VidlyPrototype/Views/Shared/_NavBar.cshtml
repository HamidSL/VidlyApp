                    <li class="nav-item dropdown">
                        <a href="@Url.Action("RentalsManager", "Administrator")" class="nav-link dropdown-toggle" data-toggle="dropdown">
                            @Resources.Controller_Home.rentals <i class="fas fa-angle-down"></i>
                        </a>
                        @*@Html.ActionLink(@Resources.Controller_Home.rentals, "Create", "Rentals", new { area = "" }, new { @class = "nav-link dropdown-toggle" })*@
                    
                        <ul class="dropdown-menu">
                            <li class="dropdown-item">
                                <a href="@Url.Action("RentalsManager", "Administrator")">
                                    <i class="fas fa-tv"></i> @Resources.Controller_Home.view_rentals
                                </a>
                                @*@Html.ActionLink(Resources.Controller_Home.view_rentals, "RentalsManager", "Administrator", new { area = ""}, new { })*@
                            </li>
                            <li class="dropdown-item">
                                <a href="@Url.Action("Create", "Rentals")">
                                    <i class="fas fa-plus-circle"></i> @Resources.Controller_Home.create_rentals
