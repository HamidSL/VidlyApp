        <button class="navbar-toggler" data-toggle="collapse" data-target="#spNavbar">
            <span class="navbar-toggler-icon"></span>
        </button>

        <!--Navbar-->
        <div class="collapse navbar-collapse" id="spNavbar">
            <ul class="navbar-nav">
                <li class="nav-item">
                    @Html.ActionLink(Resources.Controller_Home.customers, "Index", "Customers", new { area = "" }, new { @class = "nav-link" })

                </li>
                <li class="nav-item">
                    @Html.ActionLink(Resources.Controller_Home.movies, "Index", "Movies", new { area = "" }, new { @class = "nav-link" })
                </li>
                @if (User.Identity.IsAuthenticated && User.IsInRole(RoleName.IsAdministrator))
